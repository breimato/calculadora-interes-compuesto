---
import Layout from '../layouts/Layout.astro';
import CompoundInterestCalculator from '../components/CompoundInterestCalculator.jsx';
---

<Layout title="InverCalc | Calculadora de Interés Compuesto">
  <main class="container mx-auto py-12 px-4 relative">
    <button 
      id="theme-toggle" 
      class="absolute top-4 right-4 p-1.5 rounded-full bg-secondary hover:bg-secondary/80 transition-colors"
      aria-label="Cambiar tema"
    >
      <span class="relative w-5 h-5 block">
        <svg id="sun-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="absolute inset-0">
          <path d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
        </svg>
        <svg id="moon-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="absolute inset-0">
          <path d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
        </svg>
      </span>
    </button>
    
    <div class="flex flex-col items-center text-center mb-10">
      <h1 class="text-4xl font-bold tracking-tight mb-3 bg-clip-text text-transparent bg-gradient-to-r from-indigo-600 to-violet-500">
        Calculadora de Interés Compuesto
      </h1>
      <p class="text-lg text-muted-foreground max-w-2xl">
        Planifica tu futuro financiero calculando el crecimiento de tus inversiones a lo largo del tiempo.
      </p>
    </div>
    
    <CompoundInterestCalculator client:load />
    
    <footer class="mt-20 text-center">
      <div class="mb-6">
        <div class="inline-flex items-center justify-center p-1 rounded-full bg-gray-100 dark:bg-gray-800/50 backdrop-blur-sm shadow-sm">
          <nav aria-label="Footer navigation">
            <ul class="flex px-2">
              <li>
                <a href="/" class="px-4 py-2 text-sm font-medium text-indigo-600 dark:text-indigo-400 bg-gray-200 dark:bg-gray-700 rounded-full" aria-label="InverCalc home page" aria-current="page">
                  Inicio
                </a>
              </li>
              <li>
                <a href="/about" class="px-4 py-2 text-sm hover:text-indigo-500 transition-colors rounded-full hover:bg-gray-200 dark:hover:bg-gray-700" aria-label="Information about InverCalc">
                  Sobre Nosotros
                </a>
              </li>
              <li>
                <a href="/terms" class="px-4 py-2 text-sm hover:text-indigo-500 transition-colors rounded-full hover:bg-gray-200 dark:hover:bg-gray-700" aria-label="Terms and conditions of use">
                  Términos
                </a>
              </li>
              <li>
                <a href="/privacy" class="px-4 py-2 text-sm hover:text-indigo-500 transition-colors rounded-full hover:bg-gray-200 dark:hover:bg-gray-700" aria-label="Privacy policy">
                  Privacidad
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
      <p class="text-sm text-muted-foreground">© {new Date().getFullYear()} InverCalc. Todos los derechos reservados.</p>
    </footer>
  </main>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const themeToggle = document.getElementById('theme-toggle');
    const sunIcon = document.getElementById('sun-icon');
    const moonIcon = document.getElementById('moon-icon');
    
    // Verifica que todos los elementos existan
    if (!themeToggle || !sunIcon || !moonIcon) {
      console.warn('Elementos del tema no encontrados');
      return;
    }
    
    // Actualiza la visibilidad de los iconos según el tema actual
    function updateIcons() {
      const isDark = document.documentElement.classList.contains('dark');
      
      // En modo oscuro muestra el sol, en modo claro muestra la luna
      if (sunIcon) sunIcon.style.display = isDark ? 'block' : 'none';
      if (moonIcon) moonIcon.style.display = isDark ? 'none' : 'block';
    }
    
    // Inicializa los iconos al cargar la página
    updateIcons();
    
    // Maneja el cambio de tema al hacer clic en el botón
    themeToggle.addEventListener('click', () => {
      const isDark = document.documentElement.classList.contains('dark');
      const newTheme = isDark ? 'light' : 'dark';
      
      document.documentElement.classList.toggle('dark');
      localStorage.setItem('theme', newTheme);
      updateIcons();
    });
  });
</script>
</Layout>
